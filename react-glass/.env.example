# Backend Socket.IO endpoint
REACT_APP_BACKEND_URL=http://localhost:5000

# Supabase (required to show defects from database)
REACT_APP_SUPABASE_URL=https://YOUR-PROJECT-ref.supabase.co
REACT_APP_SUPABASE_ANON_KEY=ey...your_anon_key...

# Enable showing defects from Supabase in Dashboard
REACT_APP_ENABLE_SUPABASE_REALTIME=true

# Optional: auto-subscribe when Dashboard loads (without clicking Start)
REACT_APP_AUTO_SUBSCRIBE_ON_LOAD=false

# Admin UI talks to backend admin API at REACT_APP_BACKEND_URL; token is entered in the Admin page
# ADMIN_API_TOKEN is NOT read by React directly (kept server-side). Add here only for documentation.
# ADMIN_API_TOKEN=your_admin_token_here
